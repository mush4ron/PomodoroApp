<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Titles-->
    <style name="taHeadline2">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <!--Tasks-->
    <style name="taHeadline3">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="taBase1">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <!--Base texts-->
    <style name="taBase2">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>


    <!-- Text -->

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="BaseText">
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="CaptionText" parent="BaseText">
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="Title1" parent="TitleText">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="Title2" parent="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Title3" parent="TitleText">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Caption1" parent="CaptionText">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Caption2" parent="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14sp</item>
    </style>

    <style name="BackgroundText" parent="Caption2">
        <item name="android:background">@drawable/a_shape_element</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="WorkTime" parent="BackgroundText">
        <item name="android:textColor">@color/orange_light</item>
        <item name="backgroundTint">@color/orange_background</item>
    </style>

    <style name="RelaxTime" parent="BackgroundText">
        <item name="android:textColor">@color/gray_light</item>
        <item name="backgroundTint">@color/gray_background</item>
    </style>

    <style name="Tomato" parent="BackgroundText">
        <item name="android:textColor">@color/red</item>
        <item name="backgroundTint">@color/red_background</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/a_shape_element</item>
        <item name="backgroundTint">@color/gray_light</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="OvalButton">
        <item name="android:background">@drawable/a_shape_orange_grad_oval</item>
        <item name="android:backgroundTint">@color/background_support</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/background</item>
        <item name="itemTextColor">@color/background</item>
        <item name="itemIconTint">@color/bottom_menu_icon</item>
    </style>

</resources>